<Window x:Class="KozpontiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KözpontiApp" Height="400" Width="580" ResizeMode="CanMinimize" Background="White" Visibility="Visible" WindowStartupLocation="CenterScreen" Icon="kk_logo.jpg">
    
    <Grid>
    	<Grid.Background>
    		<ImageBrush ImageSource="106355.jpg"/>
    	</Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1.2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1.2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1.2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1.2*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>

        <Button x:Name="Mosogepek" Content="Mosógépek" Click="Mosogepek_Click"
                Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                Height="30" Width="150" BorderThickness="2"/>
        <Button x:Name="Kondi" Content="Kondi" Click="Kondi_Click"
                Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                Height="30" Width="150" BorderThickness="2"/>
        <Button x:Name="Nyomtatós" Content="Nyomtatós" Click="Nyomtatós_Click"
                Grid.Column="1" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center"
                Height="30" Width="150" BorderThickness="2"/>
        <Button x:Name="KoliProxy" Content="KoliProxy" Click="KoliProxy_Click"
                Grid.Column="3" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                Height="30" Width="150" BorderThickness="2"/>
        <Button x:Name="MásProxy" Content="Másik Proxy beállítása" Click="MásProxy_Click"
                Grid.Column="3" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center"
                Height="30" Width="150" BorderThickness="2"/>
        <Button x:Name="ProxyKi" Content="Proxy Kikapcs" Click="ProxyKi_Click"
                Grid.Column="3" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center"
                Height="30" Width="150" BorderThickness="2"/>
        <Button x:Name="Időzítő" Content="Időzítő" Click="Időzítő_Click"
                Grid.Column="1" Grid.Row="7" VerticalAlignment="Center" HorizontalAlignment="Center"
                Height="30" Width="150" BorderThickness="2" Grid.ColumnSpan="3" Margin="147.222,0,149.222,38.704" Grid.RowSpan="2"/>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="8" Grid.Column="2" Click="Button_Click" Height="63.778"
                Margin="0,18.666,0,0" Grid.RowSpan="2" Width="63.778" BorderBrush="#FF707070">
        	<Button.Background>
        		<ImageBrush ImageSource="kk_logo.jpg" Stretch="Uniform"/>
        	</Button.Background>
        </Button>
    </Grid>
</Window>
